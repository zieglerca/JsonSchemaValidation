{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Schema for generic types",
  "definitions": {
    "Revision": {
      "type": "string",
      "title": "any title",
      "description": "any description",
      "minLength": 5,
      "maxLength": 4 },
    "SemanticVersion": {
      "type": "string",
      "pattern": "^[0-9]{5}.[0-9]{5}.[0-9]{5}$"},
    "Description": {
      "type": "string",
      "maxLength": 255 },
    "Type": {
      "type": "string",
      "enum": [ "RuleServiceVersion", "ProjectVersion"] },
    "Id": {
      "type": "string",
      "pattern": "^[A-F0-9]{32}$"},
    "Name": {
      "type": "string",
      "minLength": 30,
      "maxLength": 30 },
    "ChangedOn": {
      "type": "string",
      "format": "date-time"},
    "ChangedBy": {
      "type": "string",
      "maxLength": 255},
    "Version": {
      "type": "object",
      "properties": {
        "allOf": [  {"$ref": "#/definitions/Revision"},
                    {"$ref": "#/definitions/SemanticVersion"},
                    {"$ref": "#/definitions/Description"},
                    {"$ref": "#/definitions/Id"},
                    {"$ref": "#/definitions/ChangedOn"},
                    {"$ref": "#/definitions/ChangedBy"}],
        "required": ["Revision", "Id", "SemanticVersion", "ChangedOn", "ChangedBy"]
      }
    }
  }
}